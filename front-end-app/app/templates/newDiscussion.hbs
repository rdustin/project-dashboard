 <div class="row">
    <div class="col-sm-12">
        <h2><a href="/#projects/{{id}}">{{name}}</a></h2>
    </div>
</div>
<br>
<div class="row">
    <div class="col-sm-12">
        <form id="add-message" method="post">
            <div class="form-group">
                <input type="text" class="form-control" name="title" placeholder="Type the subject of the message">
                <span class="help-block"></span>
            </div>
            <div class="form-group">
                <textarea class="form-control" placeholder="Type message here" name="message"></textarea>
                <span class="help-block"></span>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <input type="hidden" name="project_id" id="project_id" value="{{id}}">
                    <a class="btn btn-primary" id="saveNewDiscussion">Add Message</a>
                </div>
                <div class="col-sm-10">
                    {{> markdownDescription}}
                </div>
            </div>
        </form>
        <br>
    </div>
</div>