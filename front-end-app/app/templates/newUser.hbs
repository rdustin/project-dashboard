<div class="row">
<br>
<div class="col-sm-12">
    <form id="add-user">
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label for="first_name">First Name:</label>
                    <input type="text" value="" name="first_name">
                    <span class="help-block"></span>
                </div>
                <div class="form-group">
                    <label for="last_name">Last Name:</label>
                    <input type="text" value="" name="last_name">
                    <span class="help-block"></span>
                </div>
                <div class="form-group">
                    <label for="email">Email/Username:</label>
                    <input type="text" value="" name="email">
                    <span class="help-block"></span>
                </div>
                <div class="form-group">
                    <label for="confirm_email">Confirm Email/Username:</label>
                    <input type="text" value="" name="confirm_email">
                    <span class="help-block"></span>
                </div>
                <div class="form-group">
                    <label for="role">Choose user's role:</label>
                    <select name="role" id="role" class="form-control">
                        <option value="client">Client</option>
                        <option value="developer">Developer</option>
                        <option value="administrator">Administrator</option>
                    </select>
                    <span class="help-block"></span>
                </div>

            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Choose which projects this user should be able to access</label>
                    {{#each projects}}
                    <div class="checkbox"><label for="project_{{id}}"><input type="checkbox" id="project_{{id}}" name="projectIds" value="{{id}}"> {{name}}</label></div>
                    {{/each}}
                    <span class="help-box"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <button class="btn btn-primary" id="saveNewUser" type="submit">Create User</button> <a class="cancel-link" href="#users">Cancel</a>
            </div>
        </div>
        <br>
    </div>
</form>
</div>