                <div class="row">
                    <div class="col-sm-8">
                        <div class="row">
                            <div class="col-sm-12">
                                <h4>{{title}}</h4>
                                <p>Posted by {{user_name}} on {{formatDate creation_date "dateOnly"}}</p>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="comment-box">
                                    <div class="row">
                                        <div class="col-sm-1 discussee-box">
                                            {{user_name}}
                                        </div>
                                        <div class="col-sm-11 discussion-box">
                                            {{md message}}
                                            <hr>
                                        </div>
                                    </div>
                                    {{#each ownComment}}
                                    <div class="row">
                                        <div class="col-sm-1 discussee-box">
                                            {{user_name}}
                                        </div>
                                        <div class="col-sm-11 discussion-box">
                                            {{md comment}}
                                            <hr>
                                        </div>
                                    </div>
                                    {{/each}}
                                    <div class="row new-comment"></div>
                                    <div class="row">
                                        <div class="col-sm-1 discussee-box">
                                            {{authenticated_user_name}}
                                        </div>
                                        <div class="col-sm-11">
                                            <form id="add-comment">
                                                <div class="form-group">
                                                    <textarea class="form-control" placeholder="Add a comment" name="comment"></textarea>
                                                    <span class="help-block"></span>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <input type="hidden" name="discussion_id" value="{{id}}">
                                                        <button class="btn btn-primary" id="saveNewComment" type="submit">Add Comment</button>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        {{> markdownDescription}}
                                                    </div>
                                                </div>
                                            </form>
                                            <br>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <h4>Files</h4>
                        <form method="post" enctype="multipart/form-data" id="discussion-attachment-form">
                            <input type="hidden" name="project_id" id="project_id" value="{{project_id}}">
                            <input type="hidden" name="discussion_id" id="discussion_id" value="{{id}}">
                            <div class="form-group">
                                <input type="file" name="discussion_attachment" id="discussion_attachment">
                                <span class="help-block"></span>
                            </div>

                            <button class="btn btn-primary" id="uploadAttachment" type="submit">Upload File</button>
                        </form>
                        <ul class="discussion-file-list">
                            {{#each ownFile}}
                            <li><a class="file-download" href="https://project-dashboard.dev/api/filedownload/{{id}}/{{../auth_token}}">{{original_name}}</a> <span class="upload-date">({{formatDate upload_date "dateTime"}})</span></li>
                            {{/each}}
                        </ul>
                    </div>
                </div>