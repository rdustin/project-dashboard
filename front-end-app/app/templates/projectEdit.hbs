<div class="row">
    <br>
    <div class="col-sm-12">
        <form id="edit-project-form">
        <div class="form-group">
            <input type="text" class="form-control" name="name" value="{{name}}" placeholder="Type the project name">
            <span class="help-block"></span>
        </div>
        {{#if administrator}}
        <div class="form-group">
            <label>Choose who has access to this project</label>
            {{#each allUsers}}
            <div class="checkbox"><label for="user_{{id}}"><input type="checkbox" id="user_{{id}}" name="userIds" value="{{id}}" {{#if isUsers}}checked{{/if}} {{#if isLoggedIn}} checked disabled{{/if}}> {{first_name}} {{last_name}}</label></div>
            {{#if isLoggedIn}} <input type="hidden" name="userIds" value="{{id}}">{{/if}}
            {{/each}}
            <span class="help-box"></span>
        </div>
        <div class="form-group">
            <label for="status">Status</label>
            <select name="status" id="status">
                <option value="active" {{#if isActive}}selected{{/if}}>Active</option>
                <option value="inactive" {{#unless isActive}}selected{{/unless}}>Inactive</option>
            </select>
            <span class="help-box"></span>
        </div>
        {{else}}
        <div class="form-group">
            <label>Who has access to this project</label>
            {{#each allUsers}}
            {{#if isUsers}}
            <div class="checkbox"><label for="user_{{id}}"> {{first_name}} {{last_name}}</label></div>
            <input type="hidden" name="userIds" value="{{id}}">
            {{/if}}
            {{/each}}
            <span class="help-box"></span>
        </div>
        <div class="form-group">
            <input type="hidden" name="status" value="{{status}}">
            <span class="help-box"></span>
        </div>
        {{/if}}
        <button class="btn btn-primary" id="update-project" type="submit">Update Project</button>
        </form>
        <br>
    </div>
</div>