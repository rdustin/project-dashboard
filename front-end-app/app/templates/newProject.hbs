<div class="row">
    <br>
    <div class="col-sm-12">
        <form id="add-project">
        <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Type the project name">
            <span class="help-block"></span>
        </div>
        <div class="form-group">
            <label>Choose who has access to this project</label>
            {{#each users}}
            <div class="checkbox"><label for="user_{{id}}"><input type="checkbox" id="user_{{id}}" name="userIds" value="{{id}}" {{#if isLoggedIn}} checked disabled{{/if}}> {{first_name}} {{last_name}}</label></div>
            {{#if isLoggedIn}} <input type="hidden" name="userIds" value="{{id}}">{{/if}}
            {{/each}}
            <span class="help-box"></span>
        </div>
        <div class="form-group">
            <input type="hidden" name="status" value="active">
            <span class="help-box"></span>
        </div>
        <button class="btn btn-primary" id="saveNewProject" type="submit">Create Project</button>
        </form>
        <br>
    </div>
</div>